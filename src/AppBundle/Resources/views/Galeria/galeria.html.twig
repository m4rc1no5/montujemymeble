{% extends ':default:montujemymeble.html.twig' %}

{% block bodyblock %}
    <div class="panel panel-default">
        <div class="panel-heading">Galeria</div>
        <div class="panel-body">
            <div>
                {% if photos is null %}
                    <div>Brak zdjęć</div>
                {% else %}
                    {% for photo in photos %}
                        <div id="galeria">
                            <a href="{{ photo.url_o }}" data-lightbox="roadtrip" data-title="{{ photo.title }}">
                                <img src="{{ photo.url_q }}">
                            </a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
