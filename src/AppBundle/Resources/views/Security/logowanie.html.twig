{% extends ':default:panelAdministracyjny.html.twig' %}
{% block panelblock %}
    <div class="row" id="bodyblock">
        <div>
            <h2>Logowanie</h2>
            {% if error %}
                <div id="blad">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
        </div>
        <div id="formularz">
            <form action="{{ path('logowanie') }}" method="post">
                <div>
                    <label>Nazwa</label>
                </div>
                <div>
                    <input class="form-control" id="username" name="_username"/>
                </div>
                <div>
                    <label>Has≈Ço</label>
                </div>
                <div>
                    <input class="form-control" type="password" id="password" name="_password"/>
                </div>
                <div id="przycisk">
                    <button class="btn btn-default">Zaloguj</button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
