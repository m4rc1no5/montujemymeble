{% extends ':default:montujemymeble.html.twig' %}
{% block bodyblock %}
    {{ tinymce_init() }}
    <div class="row" id="bodyblock">
    <h2>Dadawanie artyku≈Çu</h2>
    <div>
        {{ form_start(form, { 'attr': { 'novalidate': 'novalidate'}}) }}
        <div id="formularz">
            <div>
                <label>O nas</label>
            </div>
            <div>
                {{ form_widget(form.onas, {'attr': {'class': 'form-control tinymce'}}) }}
            </div>
            <div id="blad">
                {{ form_errors(form.onas) }}
            </div>
            <div>
                <label>Oferta</label>
            </div>
            <div>
                {{ form_widget(form.oferta, {'attr': {'class': 'form-control tinymce'}}) }}
            </div>
            <div id="blad">
                {{ form_errors(form.oferta) }}
            </div>
        </div>
        <div id="przycisk">
            <button class="btn btn-default" type="submit">Zapisz</button>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}